@using TeaShop.Presentation.Dtos.DrinkDtos
@model UpdateDrinkDto
@{
    ViewData["Title"] = "UpdateDrink";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>İçecek Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="DrinkId" />
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="DrinkName" id="floatingInput" placeholder="İçecek Adı">
        <label for="floatingInput">İçecek Adı</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Price" id="floatingInput" placeholder="Fiyat">
        <label for="floatingInput">Fiyat</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="ImageUrl" id="floatingInput" placeholder="Görsel URL">
        <label for="floatingInput">Görsel URL</label>
    </div>

    <button class="btn btn-dark"> <i class="fas fa-save"></i>Kaydet</button>
</form>
