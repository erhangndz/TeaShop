@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h3>Referans Güncelle</h3>

<form method="post">
    <input type="hidden" asp-for="TestimonialId" />
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Name" id="floatingInput" placeholder="Ad Soyad">
        <label for="floatingInput">Ad Soyad</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="Comment" id="floatingInput" placeholder="Yorum">
        <label for="floatingInput">Yorum</label>
    </div>
    <div class="form-floating mb-3">
        <input type="text" class="form-control" asp-for="ImageUrl" id="floatingInput" placeholder="Görsel URL">
        <label for="floatingInput">Görsel URL</label>
    </div>

    <button class="btn btn-dark"> <i class="fas fa-pen"></i>Güncelle</button>
</form>
